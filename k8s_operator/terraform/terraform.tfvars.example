# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

project_name = "ml-platform"
environment  = "dev"
domain_name  = "example.com"

# GCP Project
gcp_project_id = "your-gcp-project-id"

# Kubernetes Version
k8s_version = "1.28"

# AWS Configuration
aws_node_instance_types = ["t3.xlarge", "t3.2xlarge"]
aws_node_count          = 3
aws_node_min_count      = 1
aws_node_max_count      = 10

# GCP Configuration
gcp_machine_type   = "n1-standard-4"
gcp_node_count     = 1
gcp_node_min_count = 1
gcp_node_max_count = 10

# Azure Configuration
azure_node_vm_size  = "Standard_D4s_v3"
azure_node_count    = 3
azure_node_min_count = 1
azure_node_max_count = 10

# Cost Optimization
use_spot_instances = true

# GPU Support
enable_gpu = false

# Traffic Management
enable_weighted_routing = false

# Monitoring
alarm_sns_topic_arn = null

# Additional Tags
tags = {
  Team    = "ML Platform"
  Project = "Multi-Region ML"
}
